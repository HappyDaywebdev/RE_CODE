

let day = ["monday","tuesday","wednesday","thursday","friday"];
console.log(day); 		// displaying into console or browser
console.log(day[1]);	 	// accessing index in array
console.log(day.length); 	// counting array length

//updating array
day[3] = "day off";		//replacing variable in array
console.log(day);		//display new array or updated array

//adding array
day.push("saturday");	//adding new in the array list (need close and open parenthesis in order to include the array list)
console.log(day);		//display new array or updated array

//inserting array
day.unshift ("saturday", "sunday");	//inserting new variable in the beginning of array
console.log(day);		//display new array or updated array

//deleting last array
day.pop( );		//deleting the last part of array list
console.log(day);		//display new array or updated array

//deleting first array
day.shift ();
console.log(day);	

//ascending method or sorting
day.sort();
console.log(day);	






